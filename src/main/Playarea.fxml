                  <font>
                     <Font size="19.0" />
                  </font>
               </Text>
               <Text fx:id="points" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="000000">
                  <font>
                     <Font size="19.0" />
                  </font>
               </Text>
               <Text strokeType="OUTSIDE" strokeWidth="0.0" />
               <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Level">
                  <font>
                     <Font size="19.0" />
                  </font>
               </Text>
               <Text fx:id="level" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="1">
