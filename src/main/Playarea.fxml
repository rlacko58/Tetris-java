<StackPane prefHeight="800" prefWidth="1000" stylesheets="@PlayArea.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.PlayArea">


    <BorderPane fx:id="gameBoard" styleClass="gameBoard">
        <center>
            <GridPane fx:id="gamePanel" alignment="CENTER">
