      <left>
         <VBox alignment="CENTER" prefHeight="794.0" prefWidth="148.0" spacing="5.0" BorderPane.alignment="CENTER">
            <children>
               <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Pocket">
                  <font>
                     <Font size="23.0" />
                  </font>
               </Text>
               <GridPane fx:id="pocket" alignment="TOP_CENTER" prefWidth="101.0">
               </GridPane>
               <Text strokeType="OUTSIDE" strokeWidth="0.0" />
