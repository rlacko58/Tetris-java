                  <font>
                     <Font size="19.0" />
                  </font>
               </Text>
               <Text fx:id="size" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="10 X 20">
                  <font>
                     <Font size="19.0" />
                  </font>
               </Text>
               <Text strokeType="OUTSIDE" strokeWidth="0.0" />
               <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Time" wrappingWidth="47.08251953125">
